<h1>Task: <%= @task.content %></h1>

<h3>Deadline: <%= deadline_formatted(@project) %></h3>

<h3>Project Lead: <%= project_lead_name(@project) %></h3>

<h3>Unassigned Tasks:</h3>
<% @project.unassigned_project_tasks.each do |task| %>
    <%= link_to task.content, task_path(task) %>
    <p><%= task.lead_notes %></p><br>
<% end %>

<h3>In Progress Tasks:</h3>
<% @project.assigned_project_tasks.each do |task| %>
    <%= link_to task.content, task_path(task) %>
    <p><%= task.lead_notes %></p><br>
<% end %>
<!DOCTYPE html>
<html>
  <head>
    <title>Roundtable: <%= Organization.find(session[:organization_id]).name %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <h1>Welcome to Roundtable Task Management for <%= curr_employee.organization.name %></h1>
    <h3>Currently Logged In As: <%= link_to curr_employee_name, employee_path(curr_employee) %></h3>

    <%= yield %>
    
    <br>
    <br>

    <%= link_to "Project Directory", projects_path %>
    <%= link_to "Employee Directory", organization_employees_path(session[:organization_id]) %>
    <%= link_to "Log Out", logout_path, method: :delete %>

  </body>
</html>

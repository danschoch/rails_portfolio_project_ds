<% if @employee.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@employee.errors.count, "error") %>
      prohibited this post from being saved:
    </h2>
 
    <ul>
    <% @employee.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @employee, url: url, method: method do |f| %>
    <% if params[:organization_id] %>
        <%= f.hidden_field :organization_id, value: params[:organization_id] %>
    <% else %>
        <%= f.hidden_field :organization_id, value: @employee.organization_id %>
    <% end %>
    
    Personal Information<br>
    First Name: <%= f.text_field :first_name %>
    Last Name: <%= f.text_field :last_name %>
    Title: <%= f.text_field :title %><br>
    <br>
    Log In Information<br>
    Email: <%= f.text_field :email %>
    Password: <%= f.password_field :password %>
    Confirm Password: <%= f.password_field :password_confirmation %><br>

    <% if @organization.employees.empty? %>
        <%= f.hidden_field :lead, value: true %>
    <% else %>
        <%= f.check_box :lead, {}, "true", "false" %> Check here for Project Lead<br>
    <% end %>

    <%= f.submit "Submit"%>
<% end %>

